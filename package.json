{
  "name": "related-files-nav",
	"displayName": "related-files-nav",
	"description": "Related file navigation helper for large projects",
	"version": "1.0.0",
	"publisher": "scjlabs",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"main": "./out/extension.js",
	"activationEvents": [
		"onCommand:related-files-nav.showRelatedFiles"
	],
	"contributes": {
		"commands": [
			{
				"command": "related-files-nav.showRelatedFiles",
				"title": "Show Related Files"
			}
		],
    "keybindings": [
      {
        "command": "related-files-nav.showRelatedFiles",
        "key": "ctrl+shift+.",
        "mac": "cmd+shift+.",
        "when": "editorTextFocus"
      }
    ]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.1",
		"@types/node": "^14.14.35",
		"eslint": "^7.22.0",
		"@typescript-eslint/eslint-plugin": "^4.18.0",
		"@typescript-eslint/parser": "^4.18.0",
		"glob": "^7.1.6",
		"mocha": "^8.3.2",
		"typescript": "^4.2.3",
		"vscode-test": "^1.5.1"
	}
}
